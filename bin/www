#!/usr/bin/env node
const http = require('http');

const app1 = require('../app');
const app2 = require('../app');
// const app3 = require('../app');

const port1 = 8000;
const port2 = 8001;
// const port3 = 8002;

app1.set('port', port1);
app2.set('port', port2);
// app3.set('port', port3);

const server1 = http.createServer(app1);
const server2 = http.createServer(app2);
// const server3 = http.createServer(app3);

server1.listen(port1);
server2.listen(port2);
// server3.listen(port3);

const onError = (err) => console.error(err);

server1.on('error', onError);
server1.on('listening', () => console.log(`App listening on port ${port1}`));
server2.on('error', onError);
server2.on('listening', () => console.log(`App listening on port ${port2}`));
// server3.on('error', onError);
// server3.on('listening', onListening);
